@model ShowRoomDetailsWithCommentsViewModel
@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-5">
    <h1 class="text-center text-primary font-weight-bold mb-4"> Room Details</h1>

    <div class="row align-items-stretch">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="col-md-5 d-flex">
                <div class="card border-0 shadow-lg rounded-lg overflow-hidden w-100">
                    <img src="@Model.ImageUrl" alt="Room Image" class="img-fluid w-100 h-100" style="object-fit: cover;">
                </div>
            </div>
        }

        <div class="col-md-7 d-flex">
            <div class="card border-0 shadow-sm p-4 rounded-lg bg-white w-100">
                <h4 class="text-primary font-weight-bold mb-3"> Room Information</h4>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Room Number</strong> @Model.RoomID</li>
                    <li class="list-group-item"><strong>Hotel Name:</strong> @Model.HotelName</li>
                    <li class="list-group-item"><strong>Room Type:</strong> @Model.RoomTypeName</li>
                    <li class="list-group-item"><strong>Capacity:</strong> @Model.Capacity Guests</li>
                    <li class="list-group-item"><strong>Status:</strong> @Model.RoomStatus</li>
                    <li class="list-group-item"><strong>Price Per Night:</strong> <span class="text-success font-weight-bold">$@Model.PricePerNight</span></li>
                    @* <li class="list-group-item"><strong>Room ID:</strong> @Model.RoomID</li> *@
                </ul>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm p-4 rounded-lg bg-light">
                <h4 class="text-primary font-weight-bold mb-3"> Room Description</h4>
                <p class="text-dark text-left">@Model.Description</p>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center mt-4">
    <a asp-action="Index" asp-controller="Room" class="btn btn-secondary px-4">↩ Back to List</a>
</div>

