@{
    ViewData["Title"] = "Welcome Admin";
    Layout = "_sidebar";
}



<style>
    /* الخلفية تغطي الشاشة بالكامل */
    .welcome-page {
        height: 100vh;
        background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('/images/relax.jpg') no-repeat center center;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        margin: 0;
        padding: 0;
    }

    /* تحسين تصميم النص */
    .welcome-content {
        max-width: 700px;
        backdrop-filter: blur(2px); /* تقليل الضبابية */
        border-radius: 10px;
    }

        .welcome-content h2 {
            font-size: 2.8rem;
            font-weight: bold;
            margin-bottom: 15px;
            color: white; /* جعل الخط أبيض بالكامل */
        }

        .welcome-content p {
            font-size: 1.4rem;
            line-height: 1.6;
            color: white; /* جعل النص أبيض */
        }
</style>

<div class="welcome-page">
    <div class="welcome-content">
        <h2>Welcome to Your Hotel Management System</h2>
        <p>
            We provide you with an easy and seamless hotel management system,
            designed to simplify operations and enhance efficiency.
        </p>
    </div>
</div>