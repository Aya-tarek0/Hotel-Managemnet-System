


@model mvcproj.View_Models.BookingViewModel

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <p class="text-center text-muted">Are you sure you want to delete this booking?</p>

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Booking ID</th>
                        <td>@Model.BookingID</td>
                    </tr>
                    <tr>
                        <th>Guest Name</th>
                        <td>@Model.Guest</td>
                    </tr>
                    <tr>
                        <th>Room Number</th>
                        <td>@Model.RoomNumber</td>
                    </tr>
                   
                    <tr>
                        <th>Check-in Date</th>
                        <td>@Model.CheckinDate?.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <th>Check-out Date</th>
                        <td>@Model.CheckoutDate?.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <th>Total Price</th>
                        <td>$@Model.TotalPrice</td>
                    </tr>
                </tbody>
            </table>

            <form asp-action="ConfirmDelete" method="post">
                <input type="hidden" name="id" value="@Model.BookingID" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger px-4" onclick="showSuccessMessage()">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>



