@model mvcproj.View_Models.BookingViewModel


@{
    ViewData["Title"] = "Add Booking";
    
Layout = "_RoomsLayout";
}
@if (User.Identity.IsAuthenticated)
{
    <div class="container mt-4">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4">🛏️ Add New Booking</h2>

            <form asp-action="SaveAdd" method="post">
                <div class="row">

                    <!-- Room Number -->
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            
                                <label asp-for="RoomNumber">RoomNumber</label>
                                <input asp-for="RoomNumber" class="form-control" readonly />
                           
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Check-in Date -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CheckinDate" class="fw-bold"></label>
                            <input asp-for="CheckinDate" type="date" class="form-control" required />
                        </div>
                    </div>

                    <!-- Check-out Date -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CheckoutDate" class="fw-bold"></label>
                            <input asp-for="CheckoutDate" type="date" class="form-control" required />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Room Type Dropdown -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="RoomTypeId" class="fw-bold">Room Type</label> 
                            <select asp-for="RoomType.RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypes" required>
                                <option value="">-- Select Room Type --</option>
                            </select>
                        </div>
                    </div>

@* 
                    <label for="RoomStatus">Room Status</label>
                    <input type="text" id="RoomStatus" class="form-control" value="@Model.Room" readonly />
 *@
                    <!-- Total Price (Read-only) -->
                    @*  <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="TotalPrice" class="fw-bold"></label>
                        <input asp-for="TotalPrice" class="form-control bg-light" readonly />
                    </div>
                </div> *@
                </div>

                <!-- Submit & Back Buttons -->
                <div class="text-center mt-4">

                    <button type="submit" class="btn btn-primary px-4">➕ Add Booking</button>
                    @*  <a asp-action="ShowRoomDetails" asp-asp-controller="Room" asp-route="@Model.RoomNumber" class="btn btn-secondary px-4 ms-2">🔙 Back</a> *@
                    <a onclick="history.back()" class="btn btn-secondary px-4 ms-2">🔙 Back</a>

                </div>
            </form>
        </div>
    </div>
}
else
{
    <a asp-action="Login" asp-controller="Account" class="btn btn-warning">Login First</a>
}

