@model mvcproj.Models.Restaurant

@{
    ViewData["Title"] = "Update Dish";
    Layout = "_sidebar";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="row justify-content-center w-100">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Update Dish Information</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SaveUpdateDish" method="post" enctype="multipart/form-data">
                        <!-- Hidden Restaurant ID -->
                        <input type="hidden" asp-for="RestaurantId" />

                        <!-- Dish Name -->
                        <div class="form-group">
                            <label asp-for="Name" class="control-label font-weight-bold">Dish Name</label>
                            <input asp-for="Name" class="form-control border border-secondary" placeholder="Enter dish name..." required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Dish Description -->
                        <div class="form-group">
                            <label asp-for="Description" class="control-label font-weight-bold">Description</label>
                            <input asp-for="Description" class="form-control border border-secondary" placeholder="Enter dish description..." required />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Price -->
                        <div class="form-group">
                            <label asp-for="Price" class="control-label font-weight-bold">Price</label>
                            <input asp-for="Price" class="form-control border border-secondary" placeholder="Enter price..." required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="control-label font-weight-bold">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control border border-secondary" placeholder="Enter image URL..." />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <!-- Current Image -->
                        <div class="form-group">
                            <label class="control-label font-weight-bold">Current Image</label>
                            <div>
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" alt="Dish Image" class="img-fluid rounded mb-3" />
                                }
                                else
                                {
                                    <p>No image available</p>
                                }
                            </div>
                        </div>

                        <!-- Upload New Image -->
                        <div class="form-group">
                            <label class="control-label font-weight-bold">Upload New Image</label>
                            <div class="custom-file">
                                <input asp-for="ImageFile" type="file" class="custom-file-input border border-secondary" accept="image/*">
                                <label class="custom-file-label">Choose file...</label>
                            </div>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <!-- Save Button -->
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success px-4">💾 Save Updates</button>
                            <a asp-action="ShowAllFood" class="btn btn-secondary px-4">↩ Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
